{
  "name": "delight-charts-monorepo",
  "packages": [
    "packages/*"
  ],
  "version": "1.0.2",
  "scripts": {
    "release": "tsx scripts/release.ts",
    "bootstrap": "tsx scripts/bootstrap.ts",
    "dev": "pnpm run -C packages/delight-charts dev",
    "docs:dev": "pnpm run -C docs dev",
    "mdocs:dev": "pnpm run -C mobile-docs dev",
    "mobile:dev": "pnpm run -C packages/delight-charts-mobile dev",
    "build": "tsx scripts/build.ts --import",
    "docs:build": "pnpm run -C docs build",
    "mdocs:build": "pnpm run -C mobile-docs build",
    "preinstall": "npx only-allow pnpm",
    "docs:serve": "pnpm run -C docs serve",
    "build:chart": "pnpm run -C packages/delight-charts build",
    "build:mobile": "pnpm run -C packages/delight-charts-mobile build",
    "lint": "eslint --ext .ts,.js,.vue src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js, ts,vue,css}": [
      "formula lint -p --fix",
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "7",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash": "^4.14.184",
    "@vitejs/plugin-vue": "^3.1.0",
    "@vitejs/plugin-vue-jsx": "^1.3.10",
    "@vue/compiler-sfc": "^3.2.37",
    "@dx/delight-charts": "workspace:*",
    "@dx/delight-charts-mobile": "workspace:*",
    "autoprefixer": "^8.6.3",
    "conventional-changelog-cli": "^2.2.2",
    "css-loader": "^0.28.11",
    "cssnano": "^3.10.0",
    "deepmerge": "^4.2.2",
    "echarts": "^5.3.3",
    "echarts-wordcloud": "^2.0.0",
    "esbuild": "^0.15.5",
    "fs-extra": "^10.1.0",
    "git-repo-info": "^2.1.1",
    "lerna": "^4.0.0",
    "rollup": "^2.77.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-typescript2": "^0.32.1",
    "rollup-plugin-vue": "^6.0.0",
    "standard-version": "^9.3.0",
    "tsx": "^3.6.0",
    "stylus": "^0.59.0",
    "typescript": "^4.5.4",
    "uglify-es": "^3.3.9",
    "vite": "^3.1.0",
    "vite-dts": "^1.0.4",
    "vite-plugin-dts": "^1.4.1",
    "vue": "^3.2.25",
    "zx": "4.3.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "react",
        "react-dom",
        "@types/react",
        "@octokit/core",
        "@octokit/rest"
      ]
    }
  },
  "engines": {
    "node": ">=14.19.3"
  }
}
